{
	"name":     "jshint",
	"version":  "2.3.0",
	"homepage": "http://jshint.com/",
	"description": "Static analysis tool for JavaScript",

	"author": {
		"name":  "Anton Kovalyov",
		"email": "anton@kovalyov.net",
		"url":   "http://anton.kovalyov.net/"
	},

	"repository": {
		"type": "git",
		"url": "https://github.com/jshint/jshint.git"
	},

	"bugs": {
		"url": "https://github.com/jshint/jshint/issues"
	},

	"bin": {
		"jshint": "./bin/jshint"
	},

	"scripts": {
		"data": "node scripts/generate-identifier-data",
		"build": "node bin/build",
		"test": "nodeunit tests tests/regression tests/unit",
		"pretest": "jshint src"
	},

	"main": "./src/jshint.js",

	"dependencies": {
		"shelljs":    "~0.7.5",
		"underscore": "~1.8.3",
		"cli":        "~1.0.1",
		"minimatch":  "^3.0.3",
		"console-browserify": "~1.1.0"
	},

	"devDependencies": {
		"jshint":        "~2.9.4",
		"shelljs":       "~0.7.5",
		"browserify":    "~13.1.1",
		"coveraje":      "0.2.x",
		"nodeunit":      "~0.10.2",
		"sinon":         "~1.17.6",
		"unicode-6.3.0": "~0.7.0",
		"regenerate":    "~1.3.1"
	},

	"jshintConfig": {
		"boss":      true,
		"node":      true,
		"strict":    true,
		"white":     true,
		"smarttabs": true,
		"maxlen":    100,
		"newcap":    false,
		"undef":     true,
		"unused":    true,
		"onecase":   true,
		"indent":    2
	},

	"licenses": [
		{
			"type": "MIT",
			"url": "https://github.com/jshint/jshint/blob/master/LICENSE"
		}
	],

	"preferGlobal": true,

	"files": [
		"bin",
		"src",
		"data"
	]
}
